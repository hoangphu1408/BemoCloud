                        li.dropdown-item 
                            img(src="./assets/images/us-flag 1.png")
                            p Japan
                        li.dropdown-item 
                            img(src="./assets/images/us-flag 1.png")
                            p English
            .header__language.dropdown.header__language__desktop
                .header__language__flag
                    img(src="./assets/images/us-flag 1.png")
                p.header__language__text eng #{test}
                i.fad.fa-angle-down
                .dropdown__language.dropdown-menu
                    li.dropdown-item 
                        img(src="./assets/images/us-flag 1.png")
                        p Vietnam
                    li.dropdown-item 
                        img(src="./assets/images/us-flag 1.png")
